# Production Environment Variables Example
# Copy this to .env.production for production deployment

# Database Configuration
DATABASE_URL=your-production-database-url

# NextAuth Configuration
NEXTAUTH_URL=https://www.fomjesus.org
NEXTAUTH_SECRET=your-production-secret-here

# Email Service (SMTP2GO)
SMTP2GO_API_KEY=your-production-smtp2go-api-key
SMTP2GO_USERNAME=your-production-smtp2go-username
SMTP2GO_PASSWORD=your-production-smtp2go-password
SMTP_HOST=mail.smtp2go.com
SMTP_PORT=587
SMTP_FROM_EMAIL=noreply@fomjesus.org

# File Storage (EKD ASSETS)
EKD_ASSETS_BASE_URL=https://www.assets.ekddigital.com
EKD_ASSETS_USERNAME=your-production-ekd-username
EKD_ASSETS_PASSWORD=your-production-ekd-password
EKD_ASSETS_CLIENT_IDENTIFIER=fom_ministry

# Certificate Management
CERTIFICATE_STORAGE_PATH=/certificates
CERTIFICATE_SECRET_KEY=your-production-certificate-signing-key
QR_CODE_BASE_URL=https://www.fomjesus.org/community/verify-certificate
PUBLIC_URL=https://www.fomjesus.org
PRODUCTION_URL=https://www.fomjesus.org

# Application
NODE_ENV=production

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_live_your-production-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-production-stripe-secret-key
